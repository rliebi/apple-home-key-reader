{
    "logging": {
        "level": 20
    },

    "nfc": {
        "port": "usbserial-0001", 
        "driver": "pn532",
        "broadcast": true
    },

    "hap": {
        "port": 51926,
        "persist": "hap.state",
        "default": "locked"
    },

    "homekey": {
        "persist": "homekey.json",
        "express": true,
        "finish": "silver",
        "flow": "fast"
    },
    "webhook": {
        "url": "http://example.invalid/webhook",
        "method": "GET",
        "auth": {
            "type": "Bearer",
            "token": "your_api_token_here",
            "basic_username": "your_username",
            "basic_password": "your_password"
        }
    },
    "door_status": {
        "url": "http://example.invalid/status",
        "path": ["inputs", "input"],
        "closed_value": 1
    }
}
